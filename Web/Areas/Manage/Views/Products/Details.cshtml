@model DataLayer.Entities.Store.Product
@using Core.Convertors;
@using Core.Services.Interfaces;
@inject IProductService _proService;
@{
    ViewData["Title"] = "جزئیات محصول";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">جزئیات محصول</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ProductEnName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.ProductEnName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Product_Weight)
        </dt>
        <dd class="col-sm-8">
