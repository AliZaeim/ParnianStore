        </dt>
        <dd class="col-sm-8">
            @Html.Raw(Model.Contraindications)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.SideEffects)
        </dt>
        <dd class="col-sm-8">
            @Html.Raw(Model.SideEffects)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.DrugInteractions)
        </dt>
        <dd class="col-sm-8">
