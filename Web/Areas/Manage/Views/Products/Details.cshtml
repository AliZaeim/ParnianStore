            @Html.DisplayNameFor(model => model.Regimens)
        </dt>
        <dd class="col-sm-8">
            @Html.Raw(Model.Regimens)
        </dd>
        <dt class="col-sm-4">
            مواد تشکیل دهنده
        </dt>
        <dd class="col-sm-8">
            @foreach (var item in Model.ProductIngredients)
            {
                var ing = await _proService.GetIngredientByIdAsync(item.IngredientId);
                @if (item != Model.ProductIngredients.LastOrDefault())
                {
                    <span>@ing.Name</span><span> | </span>
                }
                else
                {
                    <span>@ing.Name</span>
                }

            }
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ProductComment)
        </dt>
        <dd class="col-sm-8">
            @Html.Raw(Model.ProductComment)
        </dd>
