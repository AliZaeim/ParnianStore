@model DataLayer.Entities.Supplementary.Slider

@{
    ViewData["Title"] = "حذف اسلایدر";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-danger">حذف اسلایدر</h1>

<h3 class="text-xs-center alert alert-warning">آیا مطمئن به حذف اسلاید می باشید ؟</h3>
<div>
   
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SliderImage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SliderImage)
        </dd>
        
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SliderLink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SliderLink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SliderRegisterDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SliderRegisterDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SliderIsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SliderIsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SliderStartActiveDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SliderStartActiveDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SliderEndActiveDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SliderEndActiveDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SliderId" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
