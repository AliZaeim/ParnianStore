@model Core.DTOs.Admin.SliderVM

@{
    ViewData["Title"] = "ویرایش اسلایدر";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="alert alert-info text-xs-center">
    <span>ثبت اسلادر</span>
    <a href="~/Manage/Sliders/Index" class="float-xs-left text-danger">
        <span class="icon-backward2" title="بازگشت"></span>
    </a>
</h1>
<h4 class="text-xs-center">
    توجه : عرض تصویر اسلایدر بهتر است 1920 پیکسل باشد
    و ارتفاع آن در حدود 500 پیکسل
</h4>

<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SliderId" />
            <input type="hidden" asp-for="SliderImage" />
            <div class="form-group">
                <label asp-for="SliderTitle" class="control-label"></label>
                <input asp-for="SliderTitle" placeholder="خط اول اسلایدر" class="form-control" />
                <span asp-validation-for="SliderTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderTitleClass" class="control-label"></label>
                <input asp-for="SliderTitleClass" class="form-control" />
                <span asp-validation-for="SliderTitleClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderTitle_DataAppear" class="control-label"></label>
                <select asp-for="SliderTitle_DataAppear" class="form-control">
                    <option value="">انتخاب کنید ...</option>
                    <option value="bounceIn">bounceIn</option>
                    <option value="bounceInDown">bounceInDown</option>
                    <option value="bounceInLeft">bounceInLeft</option>
                    <option value="bounceInRight">bounceInRight</option>
                    <option value="bounceInUp">bounceInUp</option>
                    <option value="fadeInDown">fadeInDown</option>
                    <option value="fadeInLeft">fadeInLeft</option>
                    <option value="fadeInRight">fadeInRight</option>
                    <option value="fadeInUp">fadeInUp</option>
                    <option value="flip">flip</option>
                    <option value="flipInX">flipInX</option>
                    <option value="flipInY">flipInY</option>
                    <option value="rotateIn">rotateIn</option>
                    <option value="zoomIn">zoomIn</option>
                    <option value="zoomInDown">zoomInDown</option>
                    <option value="zoomInLeft">zoomInLeft</option>
                    <option value="zoomInRight">zoomInRight</option>
                    <option value="zoomInUp">zoomInUp</option>
                </select>
                <span asp-validation-for="SliderTitle_DataAppear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderComment" class="control-label"></label>
                <input asp-for="SliderComment" class="form-control" />
                <span asp-validation-for="SliderComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderCommentClass" class="control-label"></label>
                <input asp-for="SliderCommentClass" class="form-control" />
                <span asp-validation-for="SliderCommentClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderComment_DataAppear" class="control-label"></label>
                <select asp-for="SliderComment_DataAppear" class="form-control">
                    <option value="">انتخاب کنید ...</option>
                    <option value="bounceIn">bounceIn</option>
                    <option value="bounceInDown">bounceInDown</option>
                    <option value="bounceInLeft">bounceInLeft</option>
                    <option value="bounceInRight">bounceInRight</option>
                    <option value="bounceInUp">bounceInUp</option>
                    <option value="fadeInDown">fadeInDown</option>
                    <option value="fadeInLeft">fadeInLeft</option>
                    <option value="fadeInRight">fadeInRight</option>
                    <option value="fadeInUp">fadeInUp</option>
                    <option value="flip">flip</option>
                    <option value="flipInX">flipInX</option>
                    <option value="flipInY">flipInY</option>
                    <option value="rotateIn">rotateIn</option>
                    <option value="zoomIn">zoomIn</option>
                    <option value="zoomInDown">zoomInDown</option>
                    <option value="zoomInLeft">zoomInLeft</option>
                    <option value="zoomInRight">zoomInRight</option>
                    <option value="zoomInUp">zoomInUp</option>
                </select>
                <span asp-validation-for="SliderComment_DataAppear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderImage" class="control-label"></label><span>w:1920 - h:500</span><img width="50" height="50" class="float-xs-left mb-1" src="~/images/sliders/@Model.SliderImage" />
                <input asp-for="SliderImage" type="file" class="form-control" />
                <span asp-validation-for="SliderImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SliderLink" class="control-label"></label>
                <input asp-for="SliderLink" class="form-control  text-left" dir="ltr" />
                <span asp-validation-for="SliderLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderLinkText" class="control-label"></label>
                <input asp-for="SliderLinkText" class="form-control  text-left" dir="ltr" />
                <span asp-validation-for="SliderLinkText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderLinkClass" class="control-label"></label>
                <input asp-for="SliderLinkClass" class="form-control" />
                <span asp-validation-for="SliderLinkClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderLink_DataAppear" class="control-label"></label>
                <select asp-for="SliderLink_DataAppear" class="form-control">
                    <option value="">انتخاب کنید ...</option>
                    <option value="bounceIn">bounceIn</option>
                    <option value="bounceInDown">bounceInDown</option>
                    <option value="bounceInLeft">bounceInLeft</option>
                    <option value="bounceInRight">bounceInRight</option>
                    <option value="bounceInUp">bounceInUp</option>
                    <option value="fadeInDown">fadeInDown</option>
                    <option value="fadeInLeft">fadeInLeft</option>
                    <option value="fadeInRight">fadeInRight</option>
                    <option value="fadeInUp">fadeInUp</option>
                    <option value="flip">flip</option>
                    <option value="flipInX">flipInX</option>
                    <option value="flipInY">flipInY</option>
                    <option value="rotateIn">rotateIn</option>
                    <option value="zoomIn">zoomIn</option>
                    <option value="zoomInDown">zoomInDown</option>
                    <option value="zoomInLeft">zoomInLeft</option>
                    <option value="zoomInRight">zoomInRight</option>
                    <option value="zoomInUp">zoomInUp</option>
                </select>
                <span asp-validation-for="SliderLink_DataAppear" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SliderIsActive" /> @Html.DisplayNameFor(model => model.SliderIsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SliderStartDate" class="control-label"></label>
                <input asp-for="SliderStartDate" class="form-control" />
                <span asp-validation-for="SliderStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderStartTime" class="control-label"></label>
                <input asp-for="SliderStartTime" class="form-control" />
                <span asp-validation-for="SliderStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderEndDate" class="control-label"></label>
                <input asp-for="SliderEndDate" class="form-control" />
                <span asp-validation-for="SliderEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SliderEndTime" class="control-label"></label>
                <input asp-for="SliderEndTime" class="form-control" />
                <span asp-validation-for="SliderEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


