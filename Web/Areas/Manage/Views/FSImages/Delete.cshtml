@model DataLayer.Entities.Supplementary.FSImage

@{
    ViewData["Title"] = "حذف عکس اسلایدر";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-danger">حذف عکس اسلایدر</h1>

<h3 class="text-xs-center alert alert-warning">آیا مطمئن به حذف عکس اسلایدر هستید؟</h3>
<div>
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FractionSlider)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FractionSlider.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img width="50" height="50" src="/images/sliders/fs/@Model.Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Width)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Width)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Height)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Height)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ReturnUrl" />
        <input type="submit" value="حــذف" class="btn btn-danger" /> |
        @if (string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <a asp-action="Index">بازگشت</a>
        }
        else
        {
            <a href="@Model.ReturnUrl.Replace("-","/")">بازگشت</a>
        }
    </form>
</div>
