@model DataLayer.Entities.Store.Ingredient

@{
    ViewData["Title"] = "ثبت ماده تشکیل دهنده محصول";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">ثبت ماده تشکیل دهنده محصول</h1>


<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label><span class="float-md-left">ابعاد 200*200</span>
                <input type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" rows="3" maxlength="300" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nature" class="control-label"></label>
                <select asp-for="Nature" class="form-control">
                    <option value="">انتخاب کنید ...</option>
                    <option value="گرم و تر">گرم و تر</option>
                    <option value="گرم و خشک">گرم و خشک</option>
                    <option value="معتدل">معتدل</option>
                    <option value="سرد و تر">سرد و تر</option>
                    <option value="سرد و خشک">سرد و خشک</option>
                </select>
                <span asp-validation-for="Nature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChemicalsMeterials" class="control-label"></label><span class="float-lg-left">با خط تیره - از هم جدا شوند</span>
                <textarea rows="3" maxlength="300" asp-for="ChemicalsMeterials" class="form-control"></textarea>
                <span asp-validation-for="ChemicalsMeterials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicinalProperties" class="control-label"></label><span class="float-lg-left">با خط تیره - از هم جدا شوند</span>
                <textarea asp-for="MedicinalProperties" rows="3" maxlength="300" class="form-control"></textarea>
                <span asp-validation-for="MedicinalProperties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recommendations" class="control-label"></label><span class="float-lg-left">با خط تیره - از هم جدا شوند</span>
                <textarea rows="3" maxlength="200" asp-for="Recommendations" class="form-control"></textarea>
                <span asp-validation-for="Recommendations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبــت" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت</a>
</div>
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
