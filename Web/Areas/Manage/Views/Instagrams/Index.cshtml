@model IEnumerable<DataLayer.Entities.Supplementary.Instagram>
@using Core.Convertors;
@{
    ViewData["Title"] = "اینستاگرام";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">اینستاگرام</h1>

<p>
    <a asp-action="Create" class="btn btn-success">ثبت</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th class="text-xs-center align-middle">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="text-xs-center align-middle">
                    <img src="/images/instagrams/@item.Image" width="100" height="100" />
                </td>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td class="text-xs-center align-middle">
                    @item.CreatedDate.ToShamsiN_WithTime()
                </td>
                <td class="text-xs-center align-middle">
                    <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">حــذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
