@model DataLayer.Entities.Store.ProductGroup

@{
    ViewData["Title"] = "ویرایش گروه محصول";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">ویرایش گروه محصول</h1>


<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductGroupId" />
            <input type="hidden" asp-for="ProductGroupImage" />
            <div class="form-group">
                <label class="control-label" asp-for="ParentId">والد</label>
                <select class="form-control" asp-for="ParentId" asp-items="ViewBag.ProductGroupId">
                </select>
            </div>
            
            <div class="form-group">
                <label class="control-label" asp-for="BannerId"></label>
                <select class="form-control" asp-for="BannerId" >
                    <option value="">انتخاب کنید...</option>
                    @foreach (var banner in ViewData["Banners"] as List<DataLayer.Entities.Supplementary.Banner>)
                    {
                        <option value="@banner.Id">@banner.Comment</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProductGroupTitle" class="control-label"></label>
                <input asp-for="ProductGroupTitle" class="form-control" />
                <span asp-validation-for="ProductGroupTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductEnGroupTitle" class="control-label"></label>
                <input asp-for="ProductEnGroupTitle" class="form-control" />
                <span asp-validation-for="ProductEnGroupTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGroupMark" class="control-label"></label>
                <input asp-for="ProductGroupMark" placeholder="حداکتر 2 حرف انگلیسی" class="form-control" />
                <span asp-validation-for="ProductGroupMark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGroupComment" class="control-label"></label>
                <textarea asp-for="ProductGroupComment" maxlength="500" rows="3" class="form-control"></textarea>
                <span asp-validation-for="ProductGroupComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGroupDiscountPercent" class="control-label"></label>
                <input asp-for="ProductGroupDiscountPercent" class="form-control" />
                <span asp-validation-for="ProductGroupDiscountPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGroupDiscountValue" class="control-label"></label>
                <input asp-for="ProductGroupDiscountValue" class="form-control" />
                <span asp-validation-for="ProductGroupDiscountValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGroupImage" class="control-label"></label><img width="50" height="50" src="~/images/productGroups/@Model.ProductGroupImage" class="float-xs-left" />
                <input asp-for="ProductGroupImage" type="file" class="form-control" />
                <span asp-validation-for="ProductGroupImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGroupText" class="control-label"></label>
                <input asp-for="ProductGroupText" class="form-control" />
                <span asp-validation-for="ProductGroupText" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت</a>
</div>
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

