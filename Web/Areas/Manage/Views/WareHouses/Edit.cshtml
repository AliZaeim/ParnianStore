@model DataLayer.Entities.Store.WareHouse

@{
    ViewData["Title"] = "ویرایش دفتر انبار";
    Layout = "~/Areas/Manage/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">ویرایش دفتر انبار</h1>


<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WareHouseId" />
            <input type="hidden" asp-for="WareHouse_Date" />
            <input type="hidden" asp-for="OrderdetialId" />

            <div class="form-group">
                <label asp-for="WareHouse_Input" class="control-label"></label>
                <input asp-for="WareHouse_Input" class="form-control" />
                <span asp-validation-for="WareHouse_Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WareHouse_Export" class="control-label"></label>
                <input asp-for="WareHouse_Export" class="form-control" />
                <span asp-validation-for="WareHouse_Export" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WareHouse_Comment" class="control-label"></label>
                <input asp-for="WareHouse_Comment" class="form-control" />
                <span asp-validation-for="WareHouse_Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت</a>
</div>
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
